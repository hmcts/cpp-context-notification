<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="6" author="TechPod"
               logicalFilePath="010-remove-time-to-live-seconds-column-from-event-cache-table.xml">

        <dropColumn columnName="time_to_live_seconds" tableName="event_cache"/>

        <rollback>
            <addColumn tableName="event_cache">
                <column name="time_to_live_seconds" type="BIGINT" defaultValueNumeric="3600">
                    <constraints nullable="false"/>
                </column>
            </addColumn>
        </rollback>
    </changeSet>
</databaseChangeLog>